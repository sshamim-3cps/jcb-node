{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "typeRoots": [
            "@/types/*",
            "./node_modules/@types",
        ],
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@/types/*": [
                "src/declarations/types/*"
            ],
            "@/lib/*": [
                "src/lib/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}